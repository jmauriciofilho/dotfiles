* {
    /* ─────────────────────────────
       PRIMARY (vermelho neon)
       ───────────────────────────── */
    primary:                     #ff2a6d;
    primary-fixed:               #ff5c8a;
    primary-fixed-dim:           #ff2a6d;
    on-primary:                  #202326;
    on-primary-fixed:            #202326;
    on-primary-fixed-variant:    #2a2e38;
    primary-container:           #ff2a6d;
    on-primary-container:        #202326;

    /* ─────────────────────────────
       SECONDARY (violeta / synth)
       ───────────────────────────── */
    secondary:                   #c77dff;
    secondary-fixed:             #e0aaff;
    secondary-fixed-dim:         #c77dff;
    on-secondary:                #202326;
    on-secondary-fixed:          #202326;
    on-secondary-fixed-variant:  #2a2e38;
    secondary-container:         #3a2b4f;
    on-secondary-container:      #e0aaff;

    /* ─────────────────────────────
       TERTIARY (rosa / magenta)
       ───────────────────────────── */
    tertiary:                    #ff5c8a;
    tertiary-fixed:              #ff8fb1;
    tertiary-fixed-dim:          #ff5c8a;
    on-tertiary:                 #202326;
    on-tertiary-fixed:           #202326;
    on-tertiary-fixed-variant:   #2a2e38;
    tertiary-container:          #4a2436;
    on-tertiary-container:       #ffd1e1;

    /* ─────────────────────────────
       ERROR / CRITICAL
       ───────────────────────────── */
    error:                       #ff1f5b;
    on-error:                    #ffffff;
    error-container:             #6b0f2a;
    on-error-container:          #ffd6e2;

    /* ─────────────────────────────
       SURFACES / BACKGROUNDS
       ───────────────────────────── */
    surface:                     #202326;
    on-surface:                  #f2e6e6;
    on-surface-variant:          #cfc4cc;

    surface-dim:                 #1b1d22;
    surface-bright:              #2a2e38;

    surface-container-lowest:    #16181c;
    surface-container-low:       #1b1d22;
    surface-container:           #202326;
    surface-container-high:      #2a2e38;
    surface-container-highest:   #3f444a;

    /* ─────────────────────────────
       OUTLINES / UTILS
       ───────────────────────────── */
    outline:                     #ff2a6d;
    outline-variant:             #3f444a;
    shadow:                      #000000;
    scrim:                       #000000;

    inverse-surface:             #f2e6e6;
    inverse-on-surface:          #202326;
    inverse-primary:             #ff5c8a;
}

* {
    background:            @surface;
    foreground:            @on-surface;

    selected:              @primary-container;
    selected-foreground:   @on-primary-container;

    input-background:      @surface-container;
    input-foreground:      @on-surface;

    border-color:          @outline;
}

configuration {
	modi:                       "drun";
    show-icons:                 true;
    display-drun:               " ";
	drun-display-format:        "{name}";
    icon-theme:                 "Papirus-Dark";
    font:                       "JetBrainsMono Nerd Font 10.5";
}

/*
└── window 
    └── mainbox
        ├── inputbar
        │   ├── prompt
        │   └── entry
        └── listview
            └── elements
*/

window {
    width:                       750px;
    border:                      0px;
    border-radius:               12px;
    border-color:                @selected;

    background-color:            rgba(32, 35, 38, 0.75);
    blur:                        8px;
}

mainbox {
    spacing:                     20px;
    padding:                     20px;
    border:                      2px;
    border-radius:               12px;
    border-color:                @selected;
    background-color:            rgba(32, 35, 38, 0.85);
    children:                    [ "inputbar", "listview" ];
}

inputbar {
    spacing:                     10px;
    padding:                     15px;
    border:                      0px;
    border-radius:               10px;
    border-color:                @selected;
    background-color:            @input-background;
    text-color:                  @foreground;
    children:                    [ "prompt", "entry" ];
}

entry {
    enabled:                     true;
    background-color:            transparent;
    text-color:                  inherit;
    cursor:                      text;
    placeholder:                 "Search";
    placeholder-color:           inherit;
}

listview {
    columns:                     4;
    lines:                       2;
    scrollbar:                   false;
    layout:                      vertical;
    border:                      0px;
    border-color:                @selected;
    background-color:            transparent;
    text-color:                  @foreground;
}


element {
    spacing:                     15px;
    padding:                     20px 10px;
    border:                      0px;
    border-radius:               10px;
    border-color:                @selected;
    background-color:            transparent;
    text-color:                  @foreground;
    orientation:                 vertical;
}
element normal.normal {
    background-color: transparent;
    text-color:       @on-surface-variant;
}

element alternate.normal {
    background-color:            transparent;
    text-color:                  @foreground;
}
element selected.normal {
    background-color: @primary-container;
    text-color:       @on-primary-container;
}

element-icon {
    size:             48px;
    background-color: transparent;
    text-color: inherit;
}

element-text {
    background-color:            transparent;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

error-message {
    padding:                     15px;
    border:                      2px solid;
    border-radius:               10px;
    border-color:                @selected;
    background-color:            black / 10%;
    text-color:                  @foreground;
}
element-text {
    background-color: transparent;
    text-color: inherit;
    horizontal-align: 0.5;
    vertical-align:   0.5;
}
prompt {
    background-color: transparent;
    text-color:       @on-surface;
}